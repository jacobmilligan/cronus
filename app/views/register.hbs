<section class="sctn-dark-gradient">
	<h1>Get started with <span class="accent">Cronus</span> for free.</h1>
</section>
<section class="sctn-light">
	{{#if error}}
		<p class="form-msg">{{msg}}</p>
	{{/if}}
	<form method="POST" class="register">
		<input type="hidden" name="_csrf" value={{csrfToken}}>
		<input type="text" placeholder="Email address" name="email">
		<input type="password" placeholder="password" name="password">
		<input type="text" placeholder="First Name" name="first_name">
		<input type="text" placeholder="Last Name (optional)" name="last_name">
		<input type="submit" value="Submit"></input>
	</form>
</section>