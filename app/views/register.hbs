<section class="sctn-dark-gradient no-footer">
	<h1>Get started with <span class="accent">Cronus</span> for free.</h1>
	{{#if msg}}
		<div class="form-msg">
			<div class="form-msg-inner" style="background-color:{{msg-color}}">
				<span class="msg-object">{{msg}}</span>
			</div>
		</div>
	{{/if}}
	<form method="POST" class="register">
		<input type="hidden" name="_csrf" value={{csrfToken}} id="csrf">
		<input type="email" placeholder="Email address" name="email" value={{frmEmail}}>
		<input type="password" placeholder="password" name="password">
		<input type="text" placeholder="First Name" name="first_name" value={{firstName}}>
		<input type="text" placeholder="Last Name (optional)" name="last_name" value={{lastName}}>
		<input type="submit" value="Submit" class="frm-submit"></input>
	</form>
	<p>
		Have an account already? <a href="login">Log in here</a>
	</p>
</section>
