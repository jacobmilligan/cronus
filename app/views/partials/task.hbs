<div class="task">
  <input type="hidden" class="original-task-name" value="{{task_name}}">
  <div class="batch-container">
    <input id="{{unique_id}}" type="checkbox" class="hidden-batch">
    <label class="task-batch" for="{{unique_id}}"></label>
  </div>
  <div class="task-section task-info">
    <input type="text" class="task-name inline reset-input-styles" value="{{task_name}}" disabled>
    <div class="project-name-outer">
      <span class="task-project-name inline" style="background-color:{{color}};">{{project_name}}</span>
    </div>
    <span class="task-value">{{value}} per hour</span>
  </div>
  <div class="task-section task-tags"></div>
  <div class="task-section task-elapsed">
    <div class="task-subsection inline">
      <span class="hours">{{elapsed.hours}}</span>:<span class="minutes">{{elapsed.minutes}}</span>:<span class="seconds">{{elapsed.seconds}}</span>
    </div>
    <div class="task-subsection inline">
      <span class="task-start">{{start_time}}</span> - <span class="task-end">{{end_time}}</span>
      <input type="hidden" class="original-start-time" value="{{original_start_time}}">
    </div>
    <div class="task-subsection inline">
      <span class="total-time">$00.00</span>
    </div>
  </div>
  <div class="task-edit">
    <i class="task-edit-inner fa fa-edit"></i>
    <button class="btn task-save">Save</button>
  </div>
</div>
